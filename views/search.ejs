<%- layout('./templates/boilerplate') -%>
    <div class="row">
        <div class="col-md-10 col-lg-8 col-xl-6 offset-md-1 offset-lg-2 offset-xl-3">
            <% if (query) { %> 
            <div class="row mt-2">
                <div class="col-xl-10 offset-xl-1">
                    <div class="row">
                        <div class="col">
                            <h3 class="text-center">Search results for '<%= query %>'</h3>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <div class="d-flex justify-content-evenly">
                            <button class="btn btn-secondary w-100 search-filter"><a href="/search?query=<%= query %>">Users</a></button>
                            <button class="btn btn-secondary w-100 search-filter"><a href="/search?query=<%= query %>&type=post">Posts</a></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <% if (!users.length && !posts.length) { %>
                <p class="mt-3 lead text-center">Nothing found! Please try again.</p>
            <% } %>   
            <% if (users.length) { %> 
            <div class="mt-3 row">
                <div class="col-xl-8 offset-xl-2">
                    <div class="mt-3">
                        <% for (let user of users) { %>
                                <%- include('./partials/userCard', { user: user }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
            <% if (posts.length) { %> 
                <div class="mt-3 row">
                    <div class="col-xl-10 offset-xl-1">
                        <div class="mt-3">
                            <% for (let post of posts) { %> 
                                <%- include('./partials/postBlock', { post: post, hearted: hearted }) %>
                            <% } %> 
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>