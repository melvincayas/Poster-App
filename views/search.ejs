<%- layout('./templates/boilerplate') -%>
    <div class="row">
        <div class="col-md-10 col-lg-8 col-xl-6 offset-md-1 offset-lg-2 offset-xl-3">
            <form action="/search" id="mobile-search" class="d-flex my-3">
                <input id="search" class="form-control me-2" type="search" name="query" placeholder="Users or Posts" aria-label="Search">
                <div class="d-grid gap-2 mt-2">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </div>
              </form>

            <% if (query) { %> 
            <div class="row mt-2">
                <div class="col-xl-10 offset-xl-1">
                    <div class="row">
                        <div class="col">
                            <h3 class="text-center mt-3">Search results for '<%= query %>'</h3>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <div class="d-flex justify-content-evenly">
                            <button class="btn btn-secondary w-100 search-filter"><a href="/search?query=<%= query %>">Users</a></button>
                            <button class="btn btn-secondary w-100 search-filter"><a href="/search?query=<%= query %>&type=post">Posts</a></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <% if (users.length) { %> 
            <div class="mt-3 row">
                <div class="col-xl-8 offset-xl-2">
                    <div class="mt-3">
                        <% for (let user of users) { %>
                                <%- include('./partials/userCard', { user: user }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
            <% if (posts.length) { %> 
                <div class="mt-3 row">
                    <div class="col-xl-10 offset-xl-1">
                        <div class="mt-3">
                            <% for (let post of posts) { %> 
                                <%- include('./partials/postBlock', { post: post, hearted: hearted }) %>
                            <% } %> 
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>