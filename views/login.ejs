<%- layout('./templates/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card userForms">
                <img src="/images/login.jpg" class="card-img-top" alt="">
                <div class="card-body">
                    <h3 class="card-title">Log In</h3>
                    <form action="/login" method="POST" class="needs-validation" novalidate>
                        <div class="form-group mt-4">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                            <div class="invalid-feedback">
                                Please enter a username.
                            </div>
                        </div>
                        <div class="form-group mt-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary my-4">Log In</button>
                        </div>
                        </form>

                        <p class="text-center">Don't have an account? <a href="/register">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>