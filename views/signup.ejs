<%- layout('./templates/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-lg-8 col-xl-6 offset-md-1 offset-lg-2 offset-xl-3">
            <div class="card userForms">
                <img src="/images/signup.jpg" class="card-img-top" alt="">
                <div class="card-body">
                    <h3 class="card-title">Sign Up</h3>
                    <form action="/register" method="POST" class="needs-validation" novalidate>
                        <div class="form-group mt-4">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                            <div class="invalid-feedback">
                                Please enter a username.
                            </div>
                        </div>
                        <div class="form-group mt-4">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                            <div class="invalid-feedback">
                                Please enter a valid email.
                            </div>
                        </div>
                        <div class="form-group mt-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary my-4">Sign Up</button>
                        </div>
                        </form>

                        <p class="text-center">Already have an account? <a class="auth-links" href="/login">Log In</a></p>
                </div>
            </div>
        </div>
    </div>
</div>